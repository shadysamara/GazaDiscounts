<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".producrActivity"
    android:orientation="vertical">

    
    <ImageView
        android:id="@+id/img_add_market"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/product_sample"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textSize="20sp"
                    android:text="Market Name:" />

                <EditText
                    android:id="@+id/txt_add_market_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:textSize="15sp"
                    android:inputType="textPersonName"
                    android:hint="Enter market Name"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/shape2"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textSize="20sp"
                    android:text="Password:" />

                <EditText
                    android:id="@+id/txt_add_market_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:textSize="15sp"
                    android:inputType="textPersonName"
                    android:hint="Enter market password"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/shape2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textSize="20sp"
                    android:text="Catagory:" />

                <Spinner
                    android:id="@+id/txt_add_market_catagory"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:textSize="15sp"
                    android:entries="@array/catagories"
                    android:inputType="textPersonName"
                    android:hint="Enter Market Catagory"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/shape2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textSize="20sp"
                    android:text="City:" />

                <EditText
                    android:id="@+id/txt_add_market_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:textSize="15sp"
                    android:inputType="textPersonName"
                    android:hint="Enter Market City"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/shape2"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textSize="20sp"
                    android:text="Address:" />

                <EditText
                    android:id="@+id/txt_add_market_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:textSize="15sp"
                    android:inputType="textPostalAddress"
                    android:hint="Enter Market Address"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/shape2"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:textSize="20sp"
                    android:text="Phone:" />

                <EditText
                    android:id="@+id/txt_add_market_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:ems="10"
                    android:fontFamily="@font/segoeui"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:textColor="@color/colorAccent"
                    android:hint="Enter Market Phone"
                    android:background="@drawable/shape2"/>
            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_add_market"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape"
                android:text="Add Market"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>


        </LinearLayout>

    </ScrollView>



</LinearLayout>